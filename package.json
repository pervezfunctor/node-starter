{
  "name": "node-starter",
  "version": "1.0.0",
  "description": "node starter project",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx pnpm add -g pnpm && npx only-allow pnpm",
    "build": "npx tsc -p .",
    "lint": " npx xo",
    "test": "npm run test:ci -- --watch",
    "rs": "node -r esbuild-register",
    "ro": "node -r esbuild-register src/index.ts",
    "test:ci": "npx tap --node-arg='--require=esbuild-register'",
    "dev": "nodemon --exitcrash -x node -r esbuild-register src/index.ts",
    "ci": "npm run build && npm run lint && npm run test:ci"
  },
  "author": "Pervez Iqbal",
  "license": "ISC",
  "dependencies": {
    "chance": "1.1.8",
    "got": "^11.8.3",
    "lodash": "4.17.21",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@types/chance": "1.1.3",
    "@types/lodash": "4.14.177",
    "@types/node": "16.11.10",
    "@types/tap": "15.0.5",
    "esbuild-register": "3.2.0",
    "esbuild": "0.13.15",
    "eslint": "8.3.0",
    "nodemon": "2.0.15",
    "prettier": "2.5.0",
    "tap": "15.1.5",
    "typescript": "4.5.2",
    "xo": "0.47.0"
  },
  "xo": {
    "ignores": [
      "**/node_modules/**",
      "**/dist/**",
      "**/*.test.(ts|js)"
    ],
    "space": true,
    "semi": true,
    "arrowParens": "avoid",
    "rules": {
      "@typescript-eslint/semi": "off",
      "import/extensions": "off"
    }
  }
}
