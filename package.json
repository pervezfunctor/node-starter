{
  "name": "node-starter",
  "version": "1.0.0",
  "description": "node starter project",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc -p .",
    "tc": "npx tsc -p .",
    "tcd": "npx tsc -p . --watch",
    "lint": " npx xo",
    "test": "npm run test:ci -- --watch",
    "rs": "node -r esbuild-register",
    "ro": "node -r esbuild-register src/index.ts",
    "test:ci": "npx tap --node-arg='--require=esbuild-register'",
    "dev": "nodemon --exitcrash -x node -r esbuild-register src/index.ts",
    "ci": "npm run build && npm run lint && npm run test:ci"
  },
  "author": "Pervez Iqbal",
  "license": "ISC",
  "dependencies": {
    "chance": "1.1.9",
    "got": "12.5.2",
    "immer": "9.0.16",
    "lodash": "4.17.21",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@types/chance": "1.1.3",
    "@types/lodash": "4.14.188",
    "@types/node": "18.11.9",
    "@types/tap": "15.0.7",
    "esbuild": "0.15.13",
    "esbuild-register": "3.3.3",
    "eslint": "8.27.0",
    "nodemon": "2.0.20",
    "prettier": "2.7.1",
    "tap": "16.3.0",
    "typescript": "4.8.4",
    "vitest": "0.24.5",
    "webpack": "5.74.0",
    "xo": "0.52.4"
  },
  "xo": {
    "ignores": [
      "**/node_modules/**",
      "**/dist/**",
      "**/*.test.(ts|js)"
    ],
    "space": true,
    "semi": true,
    "arrowParens": "avoid",
    "rules": {
      "@typescript-eslint/semi": "off",
      "import/extensions": "off"
    }
  }
}
